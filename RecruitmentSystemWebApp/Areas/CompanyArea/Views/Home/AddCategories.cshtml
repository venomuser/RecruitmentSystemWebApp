@model JobCategoryAddRequest


<div class="tabs is-centered">
    <ul>
        <li class="is-active"><a asp-action="AddCategories" asp-controller="Home">ایجاد دسته بندی شغلی</a></li>
        <li><a asp-action="EditCategories" asp-controller="Home">ویرایش دسته بندی شغلی</a></li>
        <li><a asp-action="AddAdvertisement" asp-controller="Home">ایجاد آگهی استخدام</a></li>
        <li><a asp-action="AllAdvertisements" asp-controller="Home">مشاهده آگهی های ایجاد شده</a></li>
    </ul>
</div>

<h2 class="title is-2">ایجاد دسته بندی شغلی جدید</h2>
<form class="box" asp-action="AddCategories" asp-controller="Home" method="post">
    @*Category Name*@
    <div class="field">
        <label class="label" asp-for="CategoryName">نام دسته بندی شغلی </label>
        <div class="control">
            <input class="input" asp-for="CategoryName" />
            <span asp-validation-for="CategoryName" class="is-danger" style="color: red"></span>
        </div>
    </div>

    @*Submit Button*@
    <div class="field">
        <div class="control">
            <button class="button is-primary" type="submit">ایجاد دسته بندی شغلی جدید</button>

            <div asp-validation-summary="All" style="color: red" class="is-danger"></div>

            <div class="is-success" style="color: green">@ViewBag.SuccessMessage</div>
        </div>
    </div>
</form>

